<% include header %>
    <div class="row">
        <div class="col-md-6 mt-6 text-center">
            <table class="table table-striped table-bordered">
                <tr>
                    <th>ID</th>
                    <th>modelo</th>
                    <th>marca</th>
                    <th>cilindraje</th>
                    <th>Action</th>

                
                </tr>
                <% for (var i = 0; i < user.length; i ++) { %>
                    <tr>
                        <td>
                            <%= user[i].id %>
                        </td>
                        <td>
                            <%= user[i].modelo %>
                        </td>
                        <td>
                            <%= user[i].marca %>
                        </td>
                        <td>
                            <%= user[i].cilindraje %>
                        </td>
                        
                        <td>
                            <a href="/motos/eliminar_moto/<%= user[i].id %>" class="btn btn-danger">Eliminar</a>
                            <a href="/motos/update_moto/<%= user[i].id %>" class="btn btn-info">Actualizar</a>

                        </td>
                        
                    </tr>

                    <% } %>
            </table>
        </div>
        

        <div class="col-md-6 mt-4 card">
            <form class="card-body" action="/motos/addmoto" method="post">
                <h3 class="card-title">Add Motos</h3>
                <div class="form-group">
                    <input name="marca" id="caja1" type="text" class="form-control" placeholder="MARCA">
                </div>
                <div class="form-group">
                    <input name="modelo" id="caja2" type="text" class="form-control" placeholder="MODELO">
                </div>
                <div class="form-group">
                    <input name="cilindraje" id="caja2" type="text" class="form-control" placeholder="CILINDRAJE">
                </div>
       
                <input type="submit" class="btn btn-primary" value="Enviar">
            </form>
        </div>

    </div>
    <% include footer %>
