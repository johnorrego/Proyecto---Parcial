<% include header %>


    <div class="col-md-6 mt-4 card">
        <form class="card-body" action="/motos/update_moto/<%= user.id %>" method="post">
            <h3 class="card-title">Update motorcycles</h3>
            <div class="form-group">
                <input name="modelo" id="caja1" type="text" class="form-control" value="<%= user.modelo %>">
            </div>
            <div class="form-group">
                <input name="marca" id="caja2" type="text" class="form-control" value="<%= user.marca %>">
            </div>
            <div class="form-group">
                <input name="cilindraje" id="caja2" type="text" class="form-control" value="<%= user.cilindraje %>">
            </div>
            
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>

    <% include footer %>