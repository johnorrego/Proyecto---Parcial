<% include header %>


    <div class="col-md-6 mt-4 card">
        <form class="card-body" action="/users/update_user/<%= user.id %>" method="post">
            <h3 class="card-title">Update users</h3>
            <div class="form-group">
                <input name="first_name" id="caja1" type="text" class="form-control" value="<%= user.first_name %>">
            </div>
            <div class="form-group">
                <input name="last_name" id="caja2" type="text" class="form-control" value="<%= user.last_name %>">
            </div>
            <div class="form-group">
                <input name="password" id="caja2" type="text" class="form-control" value="<%= user.password %>">
            </div>
            <div class="form-group">
                <input name="user_name" id="caja2" type="text" class="form-control" value="<%= user.user_name %>">
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>

    <% include footer %>